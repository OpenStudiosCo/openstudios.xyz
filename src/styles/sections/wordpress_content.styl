/* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Headings */
.wp-block-heading {
    font-size: 1.8em;
    margin-bottom: 1em;
}

/* Images */
.wp-block-image {
    margin: 1em 0;
    display: block;
}

.aligncenter {
    display: block;
    margin-left: auto;
    margin-right: auto;
}

.is-resized {
    max-width: 100%;
    height: auto;
}

/* Captions */
.wp-element-caption {
    font-size: 0.875em;
    text-align: center;
    color: #666;
}

/* Image Sizes */
.size-large {
    width: 100%;
}

.size-full {
    width: auto;
}

/* Code Blocks */
.wp-block-code {
    background: #f5f5f5;
    padding: 1em;
    border-left: 3px solid #007cba;
    overflow-x: auto;
}

/* Text Colors */
.has-white-color {
    color: #fff;
}

.has-black-background-color {
    background-color: #000;
    color: #fff;
}

.has-text-color {
    color: var(--custom-text-color, #000);
}

.has-background {
    background-color: var(--custom-background-color, #f0f0f0);
}

.has-link-color {
    color: var(--link-color, #007cba);
}

/* Code Syntax Highlighting */
.language-html {
    color: #e44d26; /* HTML color */
}

.language-javascript {
    color: #f7df1e; /* JavaScript color */
}

.token {
    color: #000;
}

.tag {
    color: #e44d26;
}

.punctuation {
    color: #000;
}

.attr-name {
    color: #007cba;
}

.attr-value {
    color: #d14;
}

.attr-equals {
    color: #000;
}

.script {
    color: #000;
}

.keyword {
    color: #007bff; /* Keyword color */
}

.function {
    color: #3c8dbc; /* Function color */
}

.operator {
    color: #000;
}

.number {
    color: #007cba; /* Number color */
}

/* Columns and Gallery */
.wp-block-columns {
    display: flex;
    flex-wrap: wrap;
}

.is-layout-flex {
    display: flex;
}

.wp-block-column {
    flex: 1;
    padding: 0.5em;
}

.wp-block-list {
    list-style: disc;
    margin-left: 2em;
}

.wp-block-gallery {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
}

