---
permalink: "sitemap.xml"
dynamicPermalink: false
eleventyExcludeFromCollections: true
---

<?xml version="1.0" encoding="utf-8"?>

urlset(xmlns="http://www.sitemaps.org/schemas/sitemap/0.9")
    each page in collections.all
        if page.url.indexOf('/blog/') < 0 || page.url.indexOf('studio-roundup') >= 0
            url
                - urlstring = 'https://openstudios.xyz' + page.url
                loc= urlstring
                lastmod= page.date.toISOString()
                if page.data.changefreq || page.url == '/'
                    changefreq= page.data.changefreq
                else
                    changefreq weekly
                if page.data.priority
                    priority= page.data.priority

    each post in blogposts
        url
            - urlstring = 'https://openstudios.xyz/blog/' + post.year + '/' + post.month + '/' + post.slug + '.html'
            loc= urlstring
            lastmod= post.modifiedDate
            changefreq daily
